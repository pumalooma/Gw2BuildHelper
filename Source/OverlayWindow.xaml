<Window x:Class="Gw2BuildHelper.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gw2BuildHelper"
        mc:Ignorable="d"
        Background="Transparent"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True" MouseMove="Window_MouseMove"
        >
    <Grid>
        <Border x:Name="border" BorderBrush="Red" BorderThickness="1" Visibility="Hidden" />
        <Grid x:Name="circles"></Grid>
        <Grid x:Name="rectangles"></Grid>
        <Label x:Name="lblFinding" Content="Searching for Hero Panel..." Foreground="Red" HorizontalAlignment="Center" Margin="0,0,0,100" VerticalAlignment="Bottom" Visibility="Hidden"/>
    </Grid>
</Window>
